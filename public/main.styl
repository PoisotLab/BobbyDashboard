$sans = "Liberation Sans", sans-serif
$mono = monospace

$barheight = 50px

$low = #c7c7c7
$low_muted = transparentify($low, #fff, 0.5)
$high = #1ba39c
$high_muted = transparentify($high, #fff, 0.5)

substract(a, b)
    a = unit(a, px)
    b = unit(b, px)
    unit(a - b, px)

html, body
    margin: 0 0 0 0
    padding: 0 0 0 0

html
    height: 100%

body
    margin-top: $barheight
    min-height: calc(100%-50px)
    padding-bottom: -$barheight !important

colored-icon(n)
    background-color: transparentify(n, #fff, 0.8)
    border: 1px solid transparentify(n, #fff, 0.5)

.obsicon 
    width: 6px !important
    height: 6px !important
    border-radius: 6px
    colored-icon #ccc

$InsectaColor = #8c510a
$MammaliaColor = #bf812d
$PlantaeColor = #dfc27d
$ActinopterygiiColor = #f6e8c3
$AvesColor = #c7eae5
$ReptiliaColor = #80cdc1
$FungiColor = #35978f
$AmphibiaColor = #01665e

.Insecta
    colored-icon $InsectaColor
    
.Mammalia
    colored-icon $MammaliaColor

.Plantae
    colored-icon $PlantaeColor

.Actinopterygii
    colored-icon $ActinopterygiiColor

.Aves
    colored-icon $AvesColor
    
.Reptilia
    colored-icon $ReptiliaColor
    
.Fungi
    colored-icon $FungiColor

.Amphibia
    colored-icon $AmphibiaColor


#navbar
    a
        text-decoration: none
        color: #333
        font-weight: 500
    display: block
    background-color: #f8f8f5
    position: fixed
    top: 0
    width: 100%
    height: $barheight
    box-shadow: 0px 0px 2px 2px #888
    z-index: 1000
    ul
        list-style: none
        margin: 0 0 0 0
        padding: 0 0 0 0
    li
        line-height: 25px
        padding: 12.5px 0px 8.5px 0px
        margin: 0px 10px
        display: inline-block
        text-align: center
        width: 100px
        font-family: $sans
        border-bottom: 4px solid $low_muted
        font-variant: small-caps
        &:hover
            border-bottom: 4px solid $low
        &.active
            border-bottom: 4px solid $high_muted
            &:hover
                border-bottom: 4px solid $high

