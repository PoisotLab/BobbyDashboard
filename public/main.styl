$sans = sans-serif
$mono = monospace

$barheight = 50px


substract(a, b)
    a = unit(a, px)
    b = unit(b, px)
    unit(a - b, px)

html, body
    margin: 0 0 0 0
    padding: 0 0 0 0
    min-height: 100%
    height: 100%

body
    margin-top: $barheight


#map
    height: substract(900px, $barheight)

#navbar
    display: block
    background-color: #fcfcfc
    position: fixed
    top: 0
    width: 100%
    height: $barheight
    box-shadow: 0px 0px 2px 2px #888
    z-index: 1000
    ul
        list-style: none
        margin: 0 0 0 0
        padding: 0 0 0 0
    li
        line-height: 25px
        padding: 12.5px 0px 8.5px 0px
        margin: 0px 10px
        display: inline-block
        text-align: center
        width: 100px
        font-family: $sans
        border-bottom: 4px solid #e7e7e7
        &:hover
            border-bottom: 4px solid #c7c7c7
            
